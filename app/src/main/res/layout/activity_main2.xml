<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dl"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/div_white"
    tools:context=".Main2Activity">


    <LinearLayout
        android:id="@+id/ly_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/t2"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/txt_main"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/tab_menu_main"
            android:textColor="@drawable/tab_menu_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_suggest"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/tab_menu_suggest"
            android:textColor="@drawable/tab_menu_text"
            android:textSize="12sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txt_news"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/tab_menu_news"
            android:textColor="@drawable/tab_menu_text"
            android:textSize="12sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txt_chat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/tab_menu_chat"
            android:textColor="@drawable/tab_menu_text"
            android:textSize="12sp"
            android:visibility="visible" />


    </LinearLayout>

    <View
        android:id="@+id/div_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@mipmap/tabbar_bar"
        android:layout_above="@+id/ly_tab_bar" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/div_white"
        android:id="@+id/ly_content"
        android:layout_below="@+id/upbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/div_tab_bar">

    </FrameLayout>
</RelativeLayout>



    <!-- 这是右侧的部分 -->
    <LinearLayout
        android:id="@+id/right"
        android:layout_width="200dp"
        android:layout_height="528dp"
        android:layout_gravity="right"
        android:background="@mipmap/ccc"
        android:orientation="vertical">
     <TextView
         android:layout_width="match_parent"
         android:layout_height="40dp"
         android:gravity="center"
         android:textColor="@color/bg_white"
         android:textSize="20sp"
         android:text="设  置"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/kqtz"
        android:gravity="right|center_vertical"
        android:layout_weight="0.8"
        android:text="开启通知"
        android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Switch
            android:id="@+id/swh_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:textOff=""
            android:textOn=""
            android:thumb="@drawable/thumb_selctor"
            android:track="@drawable/track_selctor"
            />
    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:drawableBottom="@mipmap/fgx"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/zwdl"
                android:gravity="right|center_vertical"
                android:layout_weight="0.8"
                android:text="指纹登陆"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Switch
                android:id="@+id/zw"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:textOff=""
                android:textOn=""
                android:thumb="@drawable/thumb_selctor"
                android:track="@drawable/track_selctor"
                />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:drawableBottom="@mipmap/fgx"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/yjms"
                android:gravity="right|center_vertical"
                android:layout_weight="0.8"
                android:text="夜间模式"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Switch
                android:id="@+id/yj"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:textOff=""
                android:textOn=""
                android:thumb="@drawable/thumb_selctor"
                android:track="@drawable/track_selctor"
                />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:drawableBottom="@mipmap/fgx"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/h"
                android:gravity="right|center_vertical"
                android:layout_weight="0.8"
                android:text="指纹解锁"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Switch
                android:id="@+id/zwjs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:textOff=""
                android:textOn=""
                android:thumb="@drawable/thumb_selctor"
                android:track="@drawable/track_selctor"
                />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:drawableBottom="@mipmap/fgx"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ztdx2"
                android:gravity="right|center_vertical"
                android:layout_weight="0.8"
                android:text="字体大小"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/ztzk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:drawableRight="@drawable/zkp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/zzk"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:thumb="@mipmap/ztdx4"
                android:max="100"
                android:progress="60"
                android:secondaryProgress="70"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:drawableBottom="@mipmap/fgx"/>
        <Button
            android:layout_width="match_parent"
            android:focusable="true"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_height="120dp"
            android:background="#00000000" />
        <Button
            android:layout_width="match_parent"
            android:focusable="true"
            android:id="@+id/tc"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_height="60dp"
            android:background="#00000000"
            android:drawableBottom="@mipmap/tcdl" />
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>